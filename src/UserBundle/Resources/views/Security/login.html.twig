{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <div class="login">
        <h1>Incentive</h1>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="text" name="_username" placeholder="{{ 'security.login.username'|trans }}" required="required"  value="{{ last_username }}" />
            <input type="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required" />
            <button type="submit" class="btn btn-primary btn-block btn-large" id="_submit" name="_submit" >{{ 'security.login.submit'|trans }}</button>
        </form>
    </div>

{% endblock fos_user_content %}
